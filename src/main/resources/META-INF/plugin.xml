<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
    <id>rs.devlabs.maven-info</id>

    <!-- Public plugin name should be written in Title Case.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-name -->
    <name>Maven Project Info</name>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor email="iqoologic@gmail.com">Miloš Stojković</vendor>

    <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
         Simple HTML elements (text formatting, paragraphs, and lists) can be added inside of <![CDATA[ ]]> tag.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-description -->
    <description><![CDATA[
    Enhance your project tree view with instant visibility into key project details.
    This plugin displays the artifact version and current Git branch directly in the tree view.
    Customize colors for each of these details to suit your workflow and make important information stand out at a glance.
    Simplify version tracking and branch management, right within your IDE.
  ]]></description>

    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.java</depends>
    <depends>org.jetbrains.idea.maven</depends>
    <depends>org.jetbrains.idea.maven.model</depends>
    <depends>org.jetbrains.idea.maven.server.api</depends>
    <depends>Git4Idea</depends>

    <projectListeners>
        <listener class="rs.devlabs.maveninfo.GearActionDecorator"
                  topic="com.intellij.openapi.wm.ex.ToolWindowManagerListener"/>
    </projectListeners>
    <!-- Extension points defined by the plugin.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">
        <!--        <treeStructureProvider implementation="rs.devlabs.mvnversion.MavenVersionTreeStructureProvider"/>-->
        <!--        <projectViewNodeDecorator implementation="rs.devlabs.mvnversion.MavenVersionDecorator"/>-->
        <projectViewNodeDecorator implementation="rs.devlabs.maveninfo.SimpleMavenProjectVersionDecorator"/>
        <projectViewNodeDecorator implementation="rs.devlabs.maveninfo.SimpleGitBranchDecorator"/>
        <applicationService serviceImplementation="rs.devlabs.maveninfo.SimpleProjectInfoSettings"/>
        <applicationConfigurable
                instance="rs.devlabs.maveninfo.SimpleProjectInfoSettingsConfigurable"
                id="SimpleProjectInfoSettings"
                displayName="Project Info Settings"/>
<!--        <projectViewNodeDecorator implementation="rs.devlabs.maveninfo.ProjectInfoDecorator"/>-->
<!--        <applicationService serviceImplementation="rs.devlabs.maveninfo.ProjectInfoSettings"/>-->
<!--        <applicationConfigurable-->
<!--                instance="rs.devlabs.maveninfo.ProjectInfoSettingsConfigurable"-->
<!--                id="ProjectInfoSettings"-->
<!--                displayName="Maven Project Info Settings"/>-->
    </extensions>
</idea-plugin>
